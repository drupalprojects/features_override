 * Implements hook_features_api().
 */
function features_override_features_api() {
  return array(
    'features_override' => array(
      'name' => t('Feature Overrides'),
      'default_hook' => 'features_override_default',
      'default_file' => FEATURES_DEFAULTS_INCLUDED_COMMON,
      'feature_source' => TRUE,
      'file' => drupal_get_path('module', 'features_override') . '/features_override.feature_hooks.inc',
    ),
  );
}

